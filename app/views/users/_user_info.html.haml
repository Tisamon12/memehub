.container
	.row.user-info
		.col-lg-3
			= image_tag @user.avatar.variant(resize_to_fill: [110, 110])
		.col-lg-9
			.row
				.col-lg-5
					%h2
						= @user.username
				.col-lg-7
					= render partial: "votes/vote", locals: {resource_id: @user.id, resource_type: "User"}
			.row
				.col-lg-12
					%i{class: "far fa-image"}
					= @user.memes.count

			.row
				.col-lg-12
					%i{class: "fas fa-comment"}
					= @user.comments.count

			.row
				.col-lg-12
					%i{class: "fas fa-flag"}
					= @user.created_at

	.row
		.col-lg-6
			= link_to "Memy użytkownika", user_path(@user.id)
		.col-lg-6
			= link_to "Komentarze użytkownika", user_comments_path(@user.id)
